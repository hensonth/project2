<h2>Create new user</h2>
<% if(message.length > 0) { %>
  <h3>Flash Found</h3>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>

<form class="new-user-passport" action="/api/users" method="post">
  <div class="row">
    <div class="four columns">
      <input type="text" name="user[local][name]" id="user-name" placeholder="Your name" class="u-full-width">
    </div>
    <div class="four columns">
      <input type="text" name="user[local][email]" id="user-email" placeholder="Your user email" class="u-full-width">
    </div>
    <div class="four columns">
      <input type="text" name="user[local][password]" id="user-password" placeholder="Your user password" class="u-full-width">
    </div>
    <input type="submit" value='Save My User'>
  </div>

</form>
